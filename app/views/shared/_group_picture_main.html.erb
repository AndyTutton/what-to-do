 <% if group.banner.attached? %>
        <%= cl_image_tag group.banner.key, :transformation=>[
          {:gravity=>"face", :height=>40, :width=>40, :crop=>"thumb"},
          {:radius=>"max"},
          {:fetch_format=>:auto}
        ] %>
<% else %>
        <%= image_tag('user.png', class: "avatar") %>
<% end %>
