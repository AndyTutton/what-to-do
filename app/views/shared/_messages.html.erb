<div id="message-<%= message.id %>" class="message">
  <small>
    <% if message.user.avatar.attached? %>
      <%= cl_image_tag message.user.avatar.key, class: 'avatar' %>
    <% end %>
    <strong class="me-1"><%= message.user.first_name %></strong>
    <i><%= message.created_at.strftime(" %l:%M %p, %b %e") %></i>
  </small>
  <div class="body">
    <% if message.activity%>
      <% activity = Activity.where(id: message.content)[0] %>
      <% if activity %>
        <p class="mb-0">Hey, we should try this out</p>
        <%= link_to activity.title, activity_path(activity), class: 'btn btn-link p-0' %>
      <% else %>
        <p><%= message.content %></p>
      <% end %>
    <% else %>
      <p><%= message.content %></p>
    <% end %>
  </div>
</div>
