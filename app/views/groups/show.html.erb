<div class="container">

  <div class="row">
    <div class="col">

      <h1> <%= @group.name %> </h1>
      <p> Created on: <%= @group.created_at %> by: <%= @group.user.email %></p>

      <h5> <%= @members.count %> members <h5>


      <h5> <% @members.each do |member| %>
          <%= member.user.email %>
          <% end %>
      </h5>
    </div>
    <div class="col">
      <%= link_to "Add to Group", new_group_membership_path(@group), class: "btn btn-primary" %>
      <%= link_to "Delete Group", group_path, data: { "turbo-method": :delete }, class: "btn btn-danger text-white"%>

    </div>
  </div>


  <h2> Group members </h2>

  <% @members.each do |member| %>
    <li> <%= member.user.email %>
    <%= link_to 'X', group_membership_path(@group, membership: {group: @group, user_id: member.user}),
    data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-danger"
    %>
    </li>

  <% end%>


