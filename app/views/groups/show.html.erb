<div class="container">

<h1> Name: <%= @group.name %>
<h2> Description: <%= @group.description %> </h2>
<h3> Created by: <%= @group.user.email %> </h3>
<h3> Created on: <%= @group.created_at %> </h3>

<h2> Group members </h2>
<% @members.each do |member| %>
<li> <%= member.email %> </li>
<% end%>

<div>

  <h2> Add member to group </h2>
    <% User.all.each do |user| %>

      <li>
      <%= user.email %>
      <button data-controller="add-member" data-action="click->add-member#add"
              data-user-id="<%= user.id %>" data-group-id="<%= @group.id %>"> Add User </button>
    </li>


  <% end %>

</div>

<h2>Add Member to Group </h2>
<%= link_to "ADD MEMBER", new_group_membership_path(@group) %>

<h2>Delete Group </h2>

<%= link_to "Delete Group", group_path(@group), data: { "turbo-method": :delete } %>
