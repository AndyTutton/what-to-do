<div class="group-profile-header">
  <img class="img-fluid group-image-header image-responsive" src="https://cdn.pixabay.com/photo/2016/02/03/08/32/banner-1176676_640.jpg">
  <div class="centered text-header"><h1><%= @group.name.capitalize %></h1></div>
</div>

<div class="row py-2">
  <div class="col-md-6">
    <%= @members.count %> members:
    <% @members.each do |member| %>
      <%= member.first_name %>
    <% end %>
  </div>
  <div class="col-md-6 text-md-end">
    <% if current_user.memberships.find_by(group: @group, admin: true) %>
      <%= link_to "Add Member", new_group_membership_path(@group), class: "btn btn-primary" %>
      <%= link_to "Manage Group", edit_group_path(@group), class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>



<div class="container p-5">
  <div class="d-flex flex-column pb-4 border-bottom border-4 mb-4">



    </div>
  </div>
  <div class="d-flex flex-column pb-4 border-bottom border-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="m-0">Proposals</h2>
      <%= link_to "See all", proposals_path({group_id: @group.id}), class: "btn btn-sm btn-outline-secondary"  %>
    </div>
    <%= render 'shared/proposals', proposals: @proposals.last(2) %>
  </div>
  <div class="d-flex flex-column pb-4 border-bottom border-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="m-0">Events</h2>
      <%= link_to "See all", events_path({group_id: @group.id}), class: "btn btn-sm btn-outline-secondary"  %>
    </div>
    <%= render 'shared/events', events: @events.last(2) %>
  </div>



  <div class="w-100 input-group my-5" data-controller="clipboard">
    <input class="form-control" data-clipboard-target="input" type="text" value="<%= @invite_link %>" readonly>
    <div class="input-group-append">
      <button id="copy-button" class="btn btn-outline-primary" data-action="click->clipboard#copy">Copy invite link</button>
    </div>
  </div>
