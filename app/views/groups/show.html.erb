<div class="container">

  <h1> Name: <%= @group.name %>
  <h4> Description: <%= @group.description %> </h4>
  <h4> Created by: <%= @group.user.email %> </h4>
  <h4> Created on: <%= @group.created_at %> </h4>

  <h2> Group members </h2>

  <% @members.each do |member| %>
    <li> <%= member.user.email %> </li>
    <%= link_to 'Remove Member', group_membership_path(@group, membership: {group: @group, user_id: member.user}),
    data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}
    %>

  <% end%>


  <h2>Add Member to Group </h2>
  <%= link_to "Add member to group", new_group_membership_path(@group) %>

  <h2>Delete Group </h2>
  <%= link_to "Delete Group", group_path, data: { "turbo-method": :delete } %>

