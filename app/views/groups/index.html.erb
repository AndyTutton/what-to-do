<% if @groups.empty? %>
  <h2> You're not part of any group </h2>
<% else %>
  <h2> Here are your groups; </h2>
  <ul>
  <% @groups.each do |group| %>
    <li><%= link_to group.name, group_path(group) %></li>
  <% end %>
</ul>


<% end %>




<h4> Create a new group </h4>

<%= link_to "Create a group", new_group_path %>
