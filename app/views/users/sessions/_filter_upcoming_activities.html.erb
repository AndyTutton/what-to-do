<div>

  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="pills-upcoming-tab" data-bs-toggle="pill" data-bs-target="#pills-upcoming" type="button" role="tab" aria-controls="pills-upcoming" aria-selected="true">Upcoming</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="pills-today-tab" data-bs-toggle="pill" data-bs-target="#pills-today" type="button" role="tab" aria-controls="pills-today" aria-selected="false">Today</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="pills-week-tab" data-bs-toggle="pill" data-bs-target="#pills-week" type="button" role="tab" aria-controls="pills-week" aria-selected="false">This week</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="pills-past-tab" data-bs-toggle="pill" data-bs-target="#pills-past" type="button" role="tab" aria-controls="pills-past" aria-selected="false">Attended</button>
    </li>
  </ul>

  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-upcoming" role="tabpanel" aria-labelledby="pills-upcoming-tab" tabindex="0">
        <% if @bookings_upcoming.empty? %>
          <p> You have no upcoming activities ğŸ˜¢ </p>
        <% else %>
          <p>You have <strong><%= @bookings_upcoming.count%></strong> upcoming events</p>
          <%= render 'groups/group_confirmed_events', bookings: @bookings %>
        <% end %>
    </div>

    <div class="tab-pane fade" id="pills-today" role="tabpanel" aria-labelledby="pills-today-tab" tabindex="0">
      <% if @bookings_today.empty? %>
          <p> You have no activities planned today ğŸ˜¢ </p>
        <% else %>
          <p>You have <strong><%= @bookings_today.count%></strong> upcoming events today</p>
        <%= render 'groups/group_confirmed_events', bookings: @bookings_pending %>
        <% end %>
    </div>

    <div class="tab-pane fade" id="pills-week" role="tabpanel" aria-labelledby="pills-week-tab" tabindex="0">
        <% if @bookings_week.empty? %>
          <p> You have no activities planned this week ğŸ˜¢ </p>
        <% else %>
          <p>You have <strong><%= @bookings_week.count%></strong> upcoming events this week</p>
          <%= render 'groups/group_confirmed_events', bookings: @bookings_attending %>
        <% end %>
    </div>

    <div class="tab-pane fade" id="pills-past" role="tabpanel" aria-labelledby="pills-past-tab" tabindex="0">
      <% if @bookings_past.empty? %>
          <p> You did not participate to any event ğŸ˜¢ </p>
      <% else %>
        <p>You participated to <strong><%= @bookings_past.count%></strong> events</p>
        <%= render 'groups/group_confirmed_events', bookings: @bookings_past %>
      <% end %>
    </div>
  </div>


</div>
