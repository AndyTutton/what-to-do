<div class="container page-padding">
  <div class="divider-bottom">
    <h1>Select groups</h1>
  </div>
  <div data-controller="share" data-share-activity-value="<%= @activity.id %>" data-share-token-value="<%= form_authenticity_token %>">
    <div class="mb-4">
      <%= render 'shared/group_share_card', groups: @groups %>
    </div>
    <button class="button-secondary-wide" data-action="click->share#send">
      Share
    </button>
  </div>
</div>
