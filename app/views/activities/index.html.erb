<div class="container" data-controller="activity" data-activity-token-value="<%= form_authenticity_token %>">
  <% @activities.each_with_index do |activity, index| %>
    <div class="card browse mt-5" data-activity-target="card" data-index="<%= index %>" data-activity-id="<%= activity.id %>">
      <%= link_to activity_path(activity), class: "card-link" do %>
        <div class="card-body">
          <h5 class="card-title"><%= activity.title %></h5>
          <p class="card-text"><%= activity.description %></p>
        </div>
      <% end %>
      <div class="card-footer">
        <div class="d-flex justify-content-between">
          <button type="button" class="button-discard" data-action="click->activity#discard">Discard</button>
          <button type="button" class="button-save" data-action="click->activity#save">Save</button>
        </div>
      </div>
    </div>
  <% end %>
</div>
