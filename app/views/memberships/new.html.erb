<div class="container p-5">

  <div class="d-flex flex-column divider-bottom">
    <h2 class="m-0 neon-underline">Add members</h2>
  </div>

  <div class="my-2">
    <%= render 'search_user' %>
  </div>

  <div class="my-2">
    <%= render 'add_user_card' %>
  </div>

  <div class="my-4">
    <h5 class="fw-medium teal-underline">Invite via link</h5>
    <%= render 'shared/group_invite_link'%>
  </div>

  <div class="social-share-buttons my-5">
    <h5 class="fw-medium mb-3 teal-underline">Invite via socials</h5>
    <div class="d-flex gap-3">
      <a href="https://api.whatsapp.com/send?text=<%= CGI.escape(@invite_link) %>" target="_blank" title="Share on WhatsApp">
        <i class="fa-brands fa-square-whatsapp fa-3x pe-1 teal"></i>   </a>
      <% subject = "Invited!" %>
      <% body = "#{@invite_link}" %>
      <a href="mailto:?subject=<%= CGI.escape(subject) %>&body=<%= CGI.escape(body) %>" title="Share via Email">
          <i class="fa-solid fa-envelope fa-3x pe-1 teal"></i> </a>
    </div>
  </div>
</div>
